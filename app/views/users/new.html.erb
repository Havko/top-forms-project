<%= form_for @user do |f| %>
<%= f.label :username, 'Your Username here'%>
<%= f.text_field :username %>
<%= f.label :email%>
<%= f.text_field :email, :placeholder => "example@example.com" %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit  "Submit" %>
<% end %>
  